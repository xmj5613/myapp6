<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="right">
    <LinearLayout android:gravity="center" android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <TextView android:text="账 户:" android:textSize="30sp"
                    android:textColor="#FFFFFF" android:layout_weight="1" android:gravity="right"
                    android:layout_width="0dp" android:layout_height="wrap_content"/>
            <EditText android:layout_weight="2" android:minWidth="100dp"
                    android:layout_gravity="left" android:id="@+id/et_id" android:background="#ff0000"
                    android:layout_width="0dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <TextView android:text="用户名:" android:textSize="30sp"
                      android:textColor="#FFFFFF" android:layout_weight="1" android:gravity="right"
                      android:layout_width="0dp" android:layout_height="wrap_content"/>
            <EditText android:layout_weight="2" android:minWidth="100dp"
                      android:layout_gravity="left" android:id="@+id/et_name" android:background="#ff0000"
                      android:layout_width="0dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <TextView android:text="用户角色:" android:textSize="30sp"
                      android:textColor="#FFFFFF" android:layout_weight="1" android:gravity="right"
                      android:layout_width="0dp" android:layout_height="wrap_content"/>
            <EditText android:layout_weight="2" android:minWidth="100dp"
                      android:layout_gravity="left" android:id="@+id/et_role" android:background="#ff0000"
                      android:layout_width="0dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <TextView android:text="密 码:" android:textSize="30sp"
                      android:textColor="#FFFFFF" android:layout_weight="1" android:gravity="right"
                      android:layout_width="0dp" android:layout_height="wrap_content"/>
            <EditText android:layout_weight="2" android:minWidth="100dp"
                      android:layout_gravity="left" android:id="@+id/et_pwd" android:background="#ff0000"
                      android:layout_width="0dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <TextView android:text="确认密码:" android:textSize="30sp"
                      android:textColor="#FFFFFF" android:layout_weight="1" android:gravity="right"
                      android:layout_width="0dp" android:layout_height="wrap_content"/>
            <EditText android:layout_weight="2" android:minWidth="100dp"
                      android:layout_gravity="left" android:id="@+id/et_cpwd" android:background="#ff0000"
                      android:layout_width="0dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
          <Button android:id="@+id/btn_save" android:text="保存" android:gravity="center"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <Button android:id="@+id/btn_reset" android:text="重置" android:gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>