<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <TextView
                android:text="字母" android:background="#4fffffff" android:textColor="#ffffff"
            android:id="@+id/tv_catalog" android:gravity="center_vertical"
            android:layout_width="match_parent" android:layout_height="50dp"/>
   <LinearLayout
            android:orientation="horizontal"
           android:layout_width="match_parent" android:layout_height="50dp">
      <ImageView
              android:id="@+id/img_contact"
              android:layout_marginLeft="20dp" android:src="@drawable/ic_launcher"
              android:layout_width="50dp" android:layout_height="50dp"/>
       <TextView
               android:layout_weight="1" android:text="联系人"
               android:id="@+id/tv_name" android:gravity="left|center_vertical"
               android:layout_width="match_parent" android:layout_height="50dp"/>
   </LinearLayout>

</LinearLayout>