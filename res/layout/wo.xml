<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<TextView
        android:text="这是我的界面"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:text="渐变动画" android:id="@+id/bt_alpha"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:text="缩放动画" android:id="@+id/btn_scale"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:text="旋转动画" android:id="@+id/btn_rotate"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:text="平移动画" android:id="@+id/btn_translate"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:text="逐帧动画" android:id="@+id/btn_loading"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
   <ImageView android:src="@drawable/welcom"
            android:layout_gravity="center" android:id="@+id/iv_animation"
            android:layout_width="150dp" android:layout_height="200dp"/>
    <TextView android:id="@+id/tv_animation" android:text="改变背景颜色"
              android:background="#ffffff" android:layout_gravity="center"
            android:layout_width="300dp" android:layout_height="100dp"/>
   <!-- <com.example.myapp6.views.MyOndraw
            android:layout_gravity="center" android:id="@+id/draw"
            android:layout_width="match_parent" android:layout_height="match_parent"/>-->
</LinearLayout>