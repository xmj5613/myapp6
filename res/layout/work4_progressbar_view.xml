<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <Button
                android:id="@+id/btn_download" android:text="下载"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:visibility="invisible"
                 android:id="@+id/pb_download" android:max="100" android:progress="0"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btn_open" android:text="打开"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>